#!/bin/bash

set -eu

# Setup the environment for celery daemon

sudo addgroup celery
sudo useradd -g celery celery

echo "Creating dir /etc/conf.d"
sudo mkdir "/etc/conf.d" -p

sudo cp "$GUNICORN_PROJECT_DIR"/celery/celery.conf /etc/conf.d/celery.conf

sudo chown -R celery:celery /var/log/celery/
sudo chown -R celery:celery /var/run/celery/

echo " celery daemon setup complete."